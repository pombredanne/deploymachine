#
# CONTACTS
#
###############################################################################
###############################################################################

{% for name, contact in env.config.nagios3.contacts.items() %}
define contact {
        contact_name    {{ name }}
        {% for k, v in contact.items() %}{{ k }}     {{ v }}
        {% endfor %}
}
{% endfor %}

###############################################################################
###############################################################################
#
# CONTACT GROUPS
#
###############################################################################
###############################################################################

{% for name, group in env.config.nagios3.contactgroups.items() %}
define contactgroup {
        contactgroup_name       {{ name }}
        alias                   {{ group.alias }}
        members                 {{ ",".join(group.members) }}
}
{% endfor %}
