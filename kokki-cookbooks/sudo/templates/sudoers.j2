Defaults        !lecture,tty_tickets,!fqdn

# User privilege specification
root ALL=(ALL) ALL

# Members of the sysadmin group may gain root privileges
%sysadmin ALL=(ALL) ALL

{% for user in env.config.sudo.users %}
{{ user.name }} ALL={% if user.nopassword %}NOPASSWD:{% else %}(ALL){% endif %} ALL
{% endfor %}

{% for group in env.config.sudo.groups %}
# Members of the group '{{ group }}' may gain root privileges
%{{ group.name }} ALL={% if group.nopassword %}NOPASSWD:{% else %}(ALL){% endif %} ALL
{% endfor %}
